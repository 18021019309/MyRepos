<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">苏州市公安局装备管理平台</div>
            <!-- 头部区域（可配合layui已有的水平导航） -->
            <ul class="layui-nav layui-layout-left">
                <li class="layui-nav-item">@Html.ActionLink("主页", "Index", "Home")</li>
                <li class="layui-nav-item">@Html.ActionLink("应急物资管理系统", "About", "Home")</li>
                <li class="layui-nav-item">@Html.ActionLink("单警装备管理系统", "Contact", "Home")</li>
            </ul>
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item">
                    <a href="javascript:;">
                        <img src="http://t.cn/RCzsdCq" class="layui-nav-img">
                        贤心
                    </a>
                    <dl class="layui-nav-child">
                        <dd><a href="">基本资料</a></dd>
                        <dd><a href="">安全设置</a></dd>
                    </dl>
                </li>
                <li class="layui-nav-item"><a href="">退了</a></li>
            </ul>
        </div>
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                @Html.Action("LeftMenu")
            </div>
        </div>
        

        <div class="layui-body">
            <!-- 内容主体区域 -->
            <div style="padding: 1px;">@RenderBody()</div>
        </div>
        <div class="layui-footer">
            <!-- 底部固定区域 -->
            苏州市公安局
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/layui")
    @RenderSection("scripts", required: false)
</body>
</html>
